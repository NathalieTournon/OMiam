{% extends 'base.html.twig' %}

{% block title %}Ingredient{% endblock %}

{% block body %}
    <h1>Ingredient</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ingredient.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ ingredient.name }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ ingredient.createdAt ? ingredient.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ ingredient.updatedAt ? ingredient.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_ingredient_index') }}" class="btn btn-info mt-1">back to list</a>

        <a href="{{ path('app_back_ingredient_edit', {'id': ingredient.id}) }}" class="btn btn-warning mt-1">edit</a>

        {% if is_granted('ROLE_ADMIN') %}
            {{ include('back/ingredient/_delete_form.html.twig') }}
        {% endif %}

{% endblock %}
